<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/audio_item_green"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_mic_none_white_36dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/audio_file_name"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:gravity="center_vertical"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/audio_length"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/build_time"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="time"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_24"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"/>

</LinearLayout>